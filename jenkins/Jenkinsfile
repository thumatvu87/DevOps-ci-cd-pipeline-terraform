pipeline {
  agent any

  environment {
    DOCKER_IMAGE = "thumatvu87/devops-app:latest"
  }

  // Suggestion: Parameterize EC2 IP for flexibility
  parameters {
    string(name: 'EC2_IP', defaultValue: '', description: 'EC2 instance IP')
  }

  stages {
    stage('Checkout') {
      steps {
        git 'https://github.com/thumatvu87/devops-ci-app.git'
      }
    }

    stage('Build Docker Image') {
      steps {
        // Suggestion: Specify Dockerfile path if not in root, e.g., 'docker build -t $DOCKER_IMAGE docker/'
        sh 'docker build -t $DOCKER_IMAGE .'
      }
    }

    stage('Run Unit Tests') {
      steps {
        // Suggestion: Use unittest discover if you have multiple tests, e.g.,
        // sh 'docker run --rm $DOCKER_IMAGE python3 -m unittest discover -s tests'
        sh 'docker run --rm $DOCKER_IMAGE python3 test_app.py'
      }
    }

    stage('Push to DockerHub') {
      steps {
        withCredentials([usernamePassword(credentialsId: 'dockerhub-creds', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]) {
          sh 'echo $PASSWORD | docker login -u $USERNAME --password-stdin'
          sh 'docker push $DOCKER_IMAGE'
        }
      }
    }

    stage('Deploy to EC2') {
      steps {
        // Suggestion: Use parameter for EC2 IP and check if deploy.sh exists
        sh 'scp -o StrictHostKeyChecking=no deploy.sh ec2-user@${params.EC2_IP}:/home/ec2-user/'
        sh 'ssh -o StrictHostKeyChecking=no ec2-user@${params.EC2_IP} "bash deploy.sh"'
      }
    }
  }

  // Suggestion: Add post actions for cleanup or notifications
  post {
    always {
      echo 'Pipeline finished.'
    }
    failure {
      echo 'Pipeline failed!'
    }
  }
}

